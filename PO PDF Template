<macrolist>
    <macro id="nlheader">
        <table class="header" style="width: 100%; font-size: 9pt;">
            <!-- First Line: Logo and Title -->
            <tr>
                <td style="width: 30%;">
                    <#if companyInformation.logoUrl?length != 0>
                        <@filecabinet nstype="image" style="float: left; margin: 3px;" src="${companyInformation.logoUrl}" />
                    </#if>
                </td>
                <td></td>
                <td align="left">
                    <span class="title">${record@title}</span>
                </td>
            </tr>
            <!-- Second Line: Company Name and PO# -->
            <tr>
                <td style="width: 30%;">
                    <span class="nameandaddress">${companyInformation.companyName}</span>
                </td>
                <td></td>
                <td style="text-align: left;">
                    <span><b>PO#:</b> ${record.tranid}</span>
                </td>
            </tr>
            <!-- Third Line: First Address Line and PO Date -->
            <tr>
                <td style="width: 30%;">
                    <#if companyInformation.addressText?contains("\n")>
                        <span class="nameandaddress">${companyInformation.addressText?split("\n")[0]}</span>
                    <#else>
                        <span class="nameandaddress">${companyInformation.addressText}</span>
                    </#if>
                </td>
                <td></td>
                <td style="text-align: left;">
                    <span><b>Date:</b> ${record.trandate}</span>
                </td>
            </tr>
            <!-- Fourth Line: Second Address Line and Page Count -->
            <tr>
                <td style="width: 30%;">
                    <#if companyInformation.addressText?contains("\n")>
                        <#if companyInformation.addressText?split("\n")?size > 1>
                            <span class="nameandaddress">${companyInformation.addressText?split("\n")[1]}</span>
                        </#if>
                    </#if>
                </td>
                <td></td>
                <td style="text-align: left;">
                    <span><b>Pages:</b> <pagenumber/> of <totalpages/></span>
                </td>
            </tr>
            <!-- Additional Address Lines -->
            <#if companyInformation.addressText?contains("\n")>
                <#list companyInformation.addressText?split("\n") as line>
                    <#if line_index > 1>
                        <tr>
                            <td colspan="3" style="width: 100%;">
                                <span class="nameandaddress">${line}</span>
                            </td>
                        </tr>
                    </#if>
                </#list>
            </#if>
        </table>
    </macro>
</macrolist>
